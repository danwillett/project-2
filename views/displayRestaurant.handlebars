<section class="display-restaurant">
        {{!-- if a business id has sent following the search for random restaurant, display restaurant data --}}
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src={{image_url}} alt="Restaurant image cap">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            {{!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
              content.</p> --}}
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">{{display_address}}</li>
            <li class="list-group-item">{{display_phone}}</li>
            {{!-- <li class="list-group-item">Vestibulum at eros</li> --}}
          </ul>
          <div class="card-body">
            <a href="{{url}}" class="card-link">See restaurant page</a>
            {{!-- <a href="#" class="card-link">Another link</a> --}}
          </div>
        </div>

      </section>